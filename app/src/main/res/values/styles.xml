<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TIL.WhiteStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/til_border_state_color</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="passwordToggleTint">@color/colorPrimary</item>

    </style>

    <style name="EditText.WhiteStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="MaterialButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>